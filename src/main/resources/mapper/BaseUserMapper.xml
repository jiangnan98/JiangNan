<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bing.jiang.mapper.BaseUserMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bing.model.BaseUser">
        <id column="user_id" property="userId" />
        <result column="user_sig" property="userSig" />
        <result column="user_code" property="userCode" />
        <result column="user_pwd" property="userPwd" />
        <result column="user_card" property="userCard" />
        <result column="user_head" property="userHead" />
        <result column="user_type" property="userType" />
        <result column="user_verified" property="userVerified" />
        <result column="user_valid" property="userValid" />
        <result column="user_birthday" property="userBirthday" />
        <result column="user_sex" property="userSex" />
        <result column="user_phone" property="userPhone" />
        <result column="user_no" property="userNo" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id AS userId, user_sig AS userSig, user_code AS userCode, user_pwd AS userPwd, user_card AS userCard, user_head AS userHead, user_type AS userType, user_verified AS userVerified, user_valid AS userValid, user_birthday AS userBirthday, user_sex AS userSex, user_phone AS userPhone, user_no AS userNo
    </sql>

</mapper>
